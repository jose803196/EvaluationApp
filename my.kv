<CrearScreen>:
    BoxLayout:
        orientation: "vertical"
        Button:
            text: "Crear Lista"
            on_release: root.crear_tabla()
        Button:
            text: "Volver a principal"
            on_press: root.manager.current = 'start'

<VerScreen>:
    BoxLayout:
        orientation: "vertical"
        Button:
            text: "LEER"
        Button:
            text: "Volver a principal"
            on_press: root.manager.current = 'start'

<EditarScreen>:
    BoxLayout:
        orientation: "vertical"
        Button:
            text: "EDITO"
        Button:
            text: "Volver a principal"
            on_press: root.manager.current = 'start'

<PrinScreen>:
    BoxLayout:
        orientation: "vertical"
        Button:
            text: "Crear tabla"
            on_press: root.manager.current = 'crear'
        Button:
            text: "Ver notas"
            on_press: root.manager.current = 'ver'
        Button:
            text: "Actualizar notas"
            on_press: root.manager.current = 'editar'