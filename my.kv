    MDFloatLayout:
        md_bg_color: app.theme_cls.bg_normal
        
        MDLabel:
            text: "Editar Estudiantes"
            halign: "center"
            font_style: "H4"
            pos_hint: {"center_y": 0.9}
            
        MDRaisedButton:
