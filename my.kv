<CrearScreen>:
    FloatLayout:
        orientation: "vertical"
        Button:
            text: 'Create'
            size_hint: (1.0,0.8)
            pos_hint: {'y':0.2}
            on_release: 
                root.crear_tabla()
        RoundedButton:
            size_hint: (0.2,0.2)
            on_release:
                root.manager.current = 'start'
                root.manager.transition.direction = 'right'

<RoundedButton@Button>
    text: 'Volver'
    canvas:
        Color:
            rgb: 1,1,0

        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [100]

<VerScreen>:
    BoxLayout:
        orientation: "vertical"
        Button:
            text: 'Read'
            size_hint: (1.0,0.8)
            pos_hint: {'y':0.2}
        RoundedButton:
            text: "Volver"
            size_hint: (0.2,0.2)
            on_release:
                root.manager.current = 'start'
                root.manager.transition.direction = 'right'

<EditarScreen>:
    BoxLayout:
        orientation: "vertical"
        Button:
            text: 'Edit'
            size_hint: (1.0,0.8)
            pos_hint: {'y':0.2}
        RoundedButton:
            text: "Volver"
            size_hint: (0.2,0.2)
            on_release:
                root.manager.current = 'start'
                root.manager.transition.direction = 'right'

<PrinScreen>:
    BoxLayout:
        orientation: "vertical"
        Button:
            text: "Crear tabla"
            on_release:
                root.manager.current = 'crear'
                root.manager.transition.direction = 'left'
            background_color: (1,0.976470,0.050980,1)
        Button:
            text: "Ver notas"
            on_release:
                root.manager.current = 'ver'
                root.manager.transition.direction = 'left'
            background_color: (0,0,1,1)
        Button:
            text: "Actualizar notas"
            on_release:    
                root.manager.current = 'editar'
                root.manager.transition.direction = 'left'
            background_color: (1,0,0,1)