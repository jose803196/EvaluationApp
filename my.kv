<CrearScreen>:
    MDFloatLayout:
        md_bg_color: app.theme_cls.bg_normal
        
        MDLabel:
            text: "Crear Base de Datos"
            halign: "center"
            font_style: "H4"
            pos_hint: {"center_y": 0.85}
            size_hint_y: None
            height: self.texture_size[1]
            
        MDRectangleFlatButton:
            text: 'Crear Tabla'
            size_hint: 0.8, 0.1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            on_release: 
                root.create_table()
                
        MDFlatButton:
            text: 'Atrás'
            pos_hint: {'center_x': 0.5, 'center_y': 0.1}
            on_release:
                root.manager.current = 'start'
                root.manager.transition.direction = 'right'

<FillScreen>:
    MDBoxLayout:
        orientation: "vertical"
        padding: "20dp"
        spacing: "15dp"
        
        MDLabel:
            text: "Agregar Estudiante"
            halign: "center"
            font_style: "H4"
            size_hint_y: None
            height: self.texture_size[1]
            
        MDTextField:
            id: firstname
            hint_text: "Nombre del estudiante"
            mode: "rectangle"
            required: True
            
        MDTextField:
            id: lastname
            hint_text: "Apellido del estudiante"
            mode: "rectangle"
            required: True
            
        MDTextField:
            id: cedula
            hint_text: "Cédula del estudiante"
            mode: "rectangle"
            required: True
            input_filter: "int"
            
        MDTextField:
            id: email
            hint_text: "Email del estudiante"
            mode: "rectangle"
            required: True
            
        MDBoxLayout:
            size_hint_y: None
            height: "48dp"
            spacing: "10dp"
            
            MDFlatButton:
                text: "Atrás"
                on_release:
                    root.manager.current = 'start'
                    root.manager.transition.direction = 'right'
                    
            MDRaisedButton:
                text: "Agregar Estudiante"
                on_release:
                    root.fill()

<VerScreen>:
    MDFloatLayout:
        md_bg_color: app.theme_cls.bg_normal
        
        MDLabel:
            text: "Ver Estudiantes"
            halign: "center"
            font_style: "H4"
            pos_hint: {"center_y": 0.9}
            
        MDRaisedButton:
            text: 'Leer Datos'
            size_hint: 0.8, 0.1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            
        MDFlatButton:
            text: "Atrás"
            pos_hint: {'center_x': 0.5, 'center_y': 0.1}
            on_release:
                root.manager.current = 'start'
                root.manager.transition.direction = 'right'

