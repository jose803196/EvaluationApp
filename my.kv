<CrearScreen>:
    FloatLayout:
        TextInput:
            id: nombreinput
            size_hint: (1,0.2)
            pos_hint: {'x':0,'y':0.1}
            multiline: False
            hint_text : "Name of database"
            halign: "center"
        Button:
            text: 'Create'
            size_hint: (0.8,0.1)
            pos_hint: {'x': 0.2,'y': 0}
            on_release: 
                root.create_table(nombreinput)
                root.manager.current = 'fill'
                root.manager.transition.direction = 'left'
        RoundedButton:
            size_hint: (0.2,0.1)
            on_release:
                root.manager.current = 'start'
                root.manager.transition.direction = 'right'

<FillScreen>
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "First Name"
        TextInput:
            multiline: False
            id: firstname
            hint_text : "First name of student"
            halign: "center"
        Label:
            text: "Last Name"
        TextInput:
            multiline: False
            id: lastname
            hint_text : "Last name of student"
            halign: "center"
        Label:
            text: "ID Number"
        TextInput:
            multiline: False
            id: cedula
            hint_text : "ID of student"
            halign: "center"
        Label:
            text: "E-mail"
        TextInput:
            multiline: False
            id: email
            hint_text : "E-mail of student"
            halign: "center"
        BoxLayout:
            RoundedButton:
                size_hint_x: 0.4 
                on_release:
                    root.manager.current = 'start'
                    root.manager.transition.direction = 'right'
            Button:
                text: 'Add student'
                background_color: (0,1,0,1)

<RoundedButton@Button>
    text: 'Back'
    canvas:
        Color:
            rgb: 1,1,0

        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [100,100]


<VerScreen>:
    FloatLayout:
        orientation: "vertical"
        Button:
            text: 'Read'
            size_hint: (0.8,0.1)
            pos_hint: {'y':0,'x':0.2}
        RoundedButton:
            text: "Volver"
            size_hint: (0.2,0.1)
            on_release:
                root.manager.current = 'start'
                root.manager.transition.direction = 'right'

<EditarScreen>:
    FloatLayout:
        Button:
            text: 'Edit'
            size_hint: (0.8,0.1)
            pos_hint: {'y':0,'x':0.2}
        RoundedButton:
            text: "Volver"
            size_hint: (0.2,0.1)
            on_release:
                root.manager.current = 'start'
                root.manager.transition.direction = 'right'

<PrinScreen>:
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: "Create database"
            on_release:
                root.manager.current = 'crear'
                root.manager.transition.direction = 'left'
            background_color: (0,2,0,1)
        Button:
            text: "Read grade"
            on_release:
                root.manager.current = 'ver'
                root.manager.transition.direction = 'left'
            background_color: (0,0,1,1)
        Button:
            text: "Update grade"
            on_release:    
                root.manager.current = 'editar'
                root.manager.transition.direction = 'left'
            background_color: (1,0,0,1)