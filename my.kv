                root.manager.transition.direction = 'right'

<PrinScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        padding: "20dp"
        spacing: "15dp"
        
        MDLabel:
            text: "Menú Principal"
            halign: "center"
            font_style: "H3"
            size_hint_y: None
            height: self.texture_size[1]
            
        MDRaisedButton:
            text: "Crear Base de Datos"
            on_release:
                root.manager.current = 'crear'
                root.manager.transition.direction = 'left'
            md_bg_color: app.theme_cls.primary_color
                
        MDRaisedButton:
            text: "Ver Estudiantes"
            on_release:
                root.manager.current = 'ver'
                root.manager.transition.direction = 'left'
            md_bg_color: app.theme_cls.primary_light
                
        MDRaisedButton:
            text: "Editar Estudiantes"
            on_release:    
                root.manager.current = 'editar'
                root.manager.transition.direction = 'left'
            md_bg_color: app.theme_cls.accent_color