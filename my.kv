<CrearScreen>:
    BoxLayout:
        orientation: "vertical"
        Button:
            text: 'Create'
            on_release: root.crear_tabla()
        Button:
            text: "Volver a principal"
            on_release:
                root.manager.current = 'start'
                root.manager.transition.direction = 'right'
<VerScreen>:
    BoxLayout:
        orientation: "vertical"
        Button:
            text: "LEER"
        Button:
            text: "Volver a principal"
            on_release:
                root.manager.current = 'start'
                root.manager.transition.direction = 'right'
<EditarScreen>:
    BoxLayout:
        orientation: "vertical"
        Button:
            text: "EDITO"
        Button:
            text: "Volver a principal"
            on_release:
                root.manager.current = 'start'
                root.manager.transition.direction = 'right' 

<PrinScreen>:
    BoxLayout:
        orientation: "vertical"
        Button:
            text: "Crear tabla"
            on_release:
                root.manager.current = 'crear'
                root.manager.transition.direction = 'left'
            background_color: (1,0.976470,0.050980,1)
        Button:
            text: "Ver notas"
            on_release:
                root.manager.current = 'ver'
                root.manager.transition.direction = 'left'
            background_color: (0,0,1,1)
        Button:
            text: "Actualizar notas"
            on_release:    
                root.manager.current = 'editar'
                root.manager.transition.direction = 'left'
            background_color: (1,0,0,1)