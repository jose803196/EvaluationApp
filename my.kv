<CrearScreen>:
    MDFloatLayout:
        md_bg_color: app.theme_cls.bg_normal
        
        MDLabel:
            text: "Crear Base de Datos"
            halign: "center"
            font_style: "H4"
            pos_hint: {"center_y": 0.85}
            size_hint_y: None
            height: self.texture_size[1]
            
        MDRectangleFlatButton:
            text: 'Crear Tabla'
            size_hint: 0.8, 0.1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            on_release: 
                root.create_table()
                
        MDFlatButton:
            text: 'Atrás'
            pos_hint: {'center_x': 0.5, 'center_y': 0.1}
            on_release:
                root.manager.current = 'start'
                root.manager.transition.direction = 'right'

<FillScreen>:
    MDBoxLayout:
        orientation: "vertical"
        padding: "20dp"
        spacing: "15dp"
        
        MDLabel:
            text: "Agregar Estudiante"
            halign: "center"
            font_style: "H4"
            size_hint_y: None
            height: self.texture_size[1]
            
        MDTextField:
            id: firstname
            hint_text: "Nombre del estudiante"
            mode: "rectangle"
            required: True
            
        MDTextField:
            id: lastname
            hint_text: "Apellido del estudiante"
            mode: "rectangle"
            required: True
            
        MDTextField:
            id: cedula
            hint_text: "Cédula del estudiante"
            mode: "rectangle"
            required: True
            input_filter: "int"
            
        MDTextField:
            id: email
            hint_text: "Email del estudiante"
            mode: "rectangle"
            required: True
            
        MDBoxLayout:
            size_hint_y: None
            height: "48dp"
            spacing: "10dp"
            
            MDFlatButton:
                text: "Atrás"
                on_release:
                    root.manager.current = 'start'
                    root.manager.transition.direction = 'right'
                    
            MDRaisedButton:
                text: "Agregar Estudiante"
                on_release:
                    root.fill()

<VerScreen>:  
    MDBoxLayout:  
        orientation: "vertical"  
        
        MDTopAppBar:
            title: "Lista de Estudiantes"
            left_action_items: [["arrow-left", lambda x: app.ir_a_start()]]
            right_action_items: [["refresh", lambda x: root.cargar_estudiantes()]]
            elevation: 2  
            
        ScrollView:  
            MDList:  
                id: lista_estudiantes  
                spacing: "10dp"  
                padding: "20dp"

<EditarScreen>:
    MDBoxLayout:
        orientation: "vertical"
        
        MDTopAppBar:
            title: "Editar Notas"
            left_action_items: [["arrow-left", lambda x: app.ir_a_start()]]
            elevation: 10
            
        ScrollView:
            MDList:
                id: lista_estudiantes
                spacing: "10dp"
                padding: "20dp"


<PrinScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        padding: "20dp"
        spacing: "15dp"
        
        MDLabel:
            text: "Aplicación \n de \n Evaluacion"
            halign: "center"
            font_style: "H3"
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: "20dp"
            bold: True
            italic: True
            
        MDRaisedButton:
            text: "Crear Base o Añadir Estudiantes"
            on_release:
                root.manager.current = 'crear'
                root.manager.transition.direction = 'left'
            md_bg_color: app.theme_cls.primary_color
            size_hint_y: None
            height: "48dp"
                
        MDRaisedButton:
            text: "Ver Estudiantes"
            on_release:
                root.manager.current = 'ver'
                root.manager.transition.direction = 'left'
            md_bg_color: app.theme_cls.primary_light
                
        MDRaisedButton:
            text: "Editar Notas"
            on_release:    
                root.manager.current = 'editar'
                root.manager.transition.direction = 'left'
            md_bg_color: app.theme_cls.accent_color