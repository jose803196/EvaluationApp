<CrearScreen>:
    FloatLayout:
        TextInput:
            id: nombreinput
            size_hint: (1,0.2)
            pos_hint: {'x':0,'y':0.1}
            multiline: False
        Button:
            text: 'Create'
            size_hint: (0.8,0.1)
            pos_hint: {'x': 0.2,'y': 0}
            on_release: 
                root.create_table(nombreinput)
        RoundedButton:
            size_hint: (0.2,0.1)
            on_release:
                root.manager.current = 'start'
                root.manager.transition.direction = 'right'

<RoundedButton@Button>
    text: 'Back'
    canvas:
        Color:
            rgb: 1,1,0

        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [100,100]

<VerScreen>:
    FloatLayout:
        orientation: "vertical"
        Button:
            text: 'Read'
            size_hint: (0.8,0.1)
            pos_hint: {'y':0,'x':0.2}
        RoundedButton:
            text: "Volver"
            size_hint: (0.2,0.1)
            on_release:
                root.manager.current = 'start'
                root.manager.transition.direction = 'right'

<EditarScreen>:
    FloatLayout:
        Button:
            text: 'Edit'
            size_hint: (0.8,0.1)
            pos_hint: {'y':0,'x':0.2}
        RoundedButton:
            text: "Volver"
            size_hint: (0.2,0.1)
            on_release:
                root.manager.current = 'start'
                root.manager.transition.direction = 'right'

<PrinScreen>:
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: "Create table"
            on_release:
                root.manager.current = 'crear'
                root.manager.transition.direction = 'left'
            background_color: (0,2,0,1)
        Button:
            text: "Read points"
            on_release:
                root.manager.current = 'ver'
                root.manager.transition.direction = 'left'
            background_color: (0,0,1,1)
        Button:
            text: "Update points"
            on_release:    
                root.manager.current = 'editar'
                root.manager.transition.direction = 'left'
            background_color: (1,0,0,1)